{
  "name": "marzipano-ts",
  "version": "1.0.0",
  "description": "Marzipano-TS - A 360Â° media viewer for the modern web",
  "author": "Google Inc & Pixel & Process UG (haftungsbeschrÃ¤nkt)",
  "license": "Apache-2.0",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./src/index.js",
      "require": "./dist/marzipano.umd.js"
    }
  },
  "homepage": "https://github.com/Pixel-Process-UG/marzipano-ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pixel-Process-UG/marzipano-ts.git"
  },
  "bugs": {
    "url": "https://github.com/Pixel-Process-UG/marzipano-ts/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "mkdir -p dist/types && cp -r src/*.d.ts src/*/*.d.ts dist/types/ 2>/dev/null || true",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
    "prepublishOnly": "scripts/prepublish",
    "prepare": "husky"
  },
  "dependencies": {
    "bowser": "^2.14.1",
    "gl-matrix": "^3.4.4",
    "hammerjs": "^2.0.8",
    "minimal-event-emitter": "1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.15.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "browserify": "^17.0.0",
    "chai": "^5.3.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.5",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
